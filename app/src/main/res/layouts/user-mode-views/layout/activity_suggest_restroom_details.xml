<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usermode.SuggestRestroomDetailsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_map_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#BBD9E9"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/ll_map_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_recommended_restrooms"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_star" />

            <ImageButton
                android:id="@+id/btn_search_restroom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_search" />

            <EditText
                android:id="@+id/et_search_restroom_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textAlignment="viewEnd" />

            <ImageButton
                android:id="@+id/btn_account_details"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_account" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rate_restroom_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#BBD9E9"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_map_menu_bar">

        <LinearLayout
            android:id="@+id/ll_rate_restroom_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
    
            <TextView
                android:id="@+id/tv_restroom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Gokongwei Building"
                android:textAlignment="center"
                android:textSize="24sp" />
    
            <TextView
                android:id="@+id/tv_restroom_floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="1st Floor"
                android:textAlignment="center"
                android:textSize="24sp" />
    
            <LinearLayout
                android:id="@+id/ll_restroom_metrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
    
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_restroom_cleanliness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
    
                    <LinearLayout
                        android:id="@+id/ll_restroom_cleanliness"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
    
                        <TextView
                            android:id="@+id/tv_cleanliness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Cleanliness" />
    
                        <SeekBar
                            android:id="@+id/sb_cleanliness"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="#2554E0" />
    
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
    
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_restroom_maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
    
                    <LinearLayout
                        android:id="@+id/ll_restroom_maintenance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
    
                        <TextView
                            android:id="@+id/tv_maintenance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Maintenance" />
    
                        <SeekBar
                            android:id="@+id/sb_maintenance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="#2554E0" />
    
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
    
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_restroom_vacancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
    
                    <LinearLayout
                        android:id="@+id/ll_restroom_vacancy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
    
                        <TextView
                            android:id="@+id/tv_vacancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Vacancy" />
    
                        <SeekBar
                            android:id="@+id/sb_vacancy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="#2554E0" />
    
                    </LinearLayout>
    
                </androidx.cardview.widget.CardView>
    
            </LinearLayout>
    
            <ScrollView
                android:id="@+id/sv_restroom_amenities"
                android:layout_width="match_parent"
                android:layout_height="325dp">
    
                <LinearLayout
                    android:id="@+id/ll_restroom_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
    
                    <TextView
                        android:id="@+id/tv_restroom_amenities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amenities Switch List" />
    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_restroom_amenities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_submit_restroom_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="submitRatingButton"
                android:text="Submit Restroom Info" />
    
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>