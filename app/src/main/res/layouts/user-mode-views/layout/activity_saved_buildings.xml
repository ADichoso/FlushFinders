<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usermode.SavedBuildingsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_restroom_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#BBD9E9"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tbtn_saved_restrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Saved"
                android:textOn="Saved"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/tbtn_top_restrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Top Restrooms Near You"
                android:textOn="Top Restrooms Near You"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/tbtn_similar_restrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Similar Restrooms"
                android:textOn="Similar Restrooms"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_buildings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_restroom_filters"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_buildings"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>